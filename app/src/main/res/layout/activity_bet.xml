<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context=".BetActivity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:background="@drawable/back_score"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorScoreText"
            android:textSize="18dp"
            tools:text="@string/totalScore"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorText"
        android:textSize="24dp"
        tools:text="@string/title_bet_quarterfinal"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:orientation="horizontal"
        android:background="@drawable/back_list">

        <ImageView
            android:id="@+id/iv_first"
            android:layout_width="40sp"
            android:layout_height="@dimen/dimenFlagHeightL"
            android:scaleType="centerInside"
            tools:src="@drawable/flag_argentina"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/vs"/>

        <ImageView
            android:id="@+id/iv_second"
            android:layout_width="40sp"
            android:layout_height="@dimen/dimenFlagHeightL"
            android:scaleType="centerInside"
            tools:src="@drawable/flag_belgium"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:textAlignment="gravity"
        android:textColor="@color/colorText"
        android:textSize="15dp"
        android:text="@string/subtitle_score"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="11dp"
        android:paddingEnd="11dp"
        android:background="@drawable/back_list"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_pair_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_pair_1_first"
                android:layout_width="100sp"
                android:layout_height="@dimen/dimenFlagHeightB"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                tools:src="@drawable/flag_brazil"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="18dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_pair_1_first_up"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="30sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_up"/>

                <TextView
                    android:id="@+id/tv_pair_1_first"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="@dimen/dimenGoal"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/back_goal"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorGoalText"
                    android:textSize="24dp"
                    android:text="0"/>

                <ImageView
                    android:id="@+id/iv_pair_1_first_down"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="30sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_down"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:layout_width="50sp"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/vs"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_pair_1_second_up"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="30sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_up"/>

                <TextView
                    android:id="@+id/tv_pair_1_second"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="@dimen/dimenGoal"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/back_goal"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorGoalText"
                    android:textSize="24dp"
                    android:text="0"/>

                <ImageView
                    android:id="@+id/iv_pair_1_second_down"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="30sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_down"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:id="@+id/iv_pair_1_second"
                android:layout_width="100sp"
                android:layout_height="@dimen/dimenFlagHeightB"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                tools:src="@drawable/flag_greatbritain"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_pair_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_pair_2_first"
                android:layout_width="100sp"
                android:layout_height="@dimen/dimenFlagHeightB"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                tools:src="@drawable/flag_turkey"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="18dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_pair_2_first_up"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="30sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_up"/>

                <TextView
                    android:id="@+id/tv_pair_2_first"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="@dimen/dimenGoal"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/back_goal"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorGoalText"
                    android:textSize="24dp"
                    android:text="0"/>

                <ImageView
                    android:id="@+id/iv_pair_2_first_down"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="30sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_down"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:layout_width="50sp"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/vs"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_pair_2_second_up"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="30sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_up"/>

                <TextView
                    android:id="@+id/tv_pair_2_second"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="@dimen/dimenGoal"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/back_goal"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorGoalText"
                    android:textSize="24dp"
                    android:text="0"/>

                <ImageView
                    android:id="@+id/iv_pair_2_second_down"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="30sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_down"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:id="@+id/iv_pair_2_second"
                android:layout_width="100sp"
                android:layout_height="@dimen/dimenFlagHeightB"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                tools:src="@drawable/flag_korea"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_pair_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_pair_3_first"
                android:layout_width="100sp"
                android:layout_height="@dimen/dimenFlagHeightB"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                tools:src="@drawable/flag_japan"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="18dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_pair_3_first_up"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="30sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_up"/>

                <TextView
                    android:id="@+id/tv_pair_3_first"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="@dimen/dimenGoal"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/back_goal"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorGoalText"
                    android:textSize="24dp"
                    android:text="0"/>

                <ImageView
                    android:id="@+id/iv_pair_3_first_down"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="30sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_down"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:layout_width="50sp"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/vs"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_pair_3_second_up"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="30sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_up"/>

                <TextView
                    android:id="@+id/tv_pair_3_second"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="@dimen/dimenGoal"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/back_goal"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorGoalText"
                    android:textSize="24dp"
                    android:text="0"/>

                <ImageView
                    android:id="@+id/iv_pair_3_second_down"
                    android:layout_width="@dimen/dimenGoal"
                    android:layout_height="30sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_down"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:id="@+id/iv_pair_3_second"
                android:layout_width="100sp"
                android:layout_height="@dimen/dimenFlagHeightB"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                tools:src="@drawable/flag_france"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/iv_start"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimenButtonHeight"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/button_start"/>

</androidx.appcompat.widget.LinearLayoutCompat>
