<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/load"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Load"
            android:textColor="@color/colorText"
            android:textSize="34sp"
            android:layout_marginTop="100sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lot"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/soccerball" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/apostas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        android:orientation="vertical"
        android:visibility="invisible">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2"/>

        <ImageView
            android:id="@+id/iv_continue"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimenButtonHeight"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/button_continue"
            android:visibility="invisible"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorText"
            android:textSize="24dp"
            android:text="@string/title_start"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@drawable/back_list">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_argentina"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimenStartFlagHeight"
                    android:layout_weight="1"
                    android:padding="@dimen/dimenSelectBorder"
                    android:background="@drawable/back_flag"
                    android:scaleType="centerInside"
                    android:src="@drawable/flag_argentina"/>

                <ImageView
                    android:id="@+id/iv_belgium"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimenStartFlagHeight"
                    android:layout_weight="1"
                    android:padding="@dimen/dimenSelectBorder"
                    android:background="@drawable/back_flag"
                    android:scaleType="centerInside"
                    android:src="@drawable/flag_belgium"/>

                <ImageView
                    android:id="@+id/iv_brazil"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimenStartFlagHeight"
                    android:layout_weight="1"
                    android:padding="@dimen/dimenSelectBorder"
                    android:background="@drawable/back_flag"
                    android:scaleType="centerInside"
                    android:src="@drawable/flag_brazil"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_greatbritain"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimenStartFlagHeight"
                    android:layout_weight="1"
                    android:padding="@dimen/dimenSelectBorder"
                    android:background="@drawable/back_flag"
                    android:scaleType="centerInside"
                    android:src="@drawable/flag_greatbritain"/>

                <ImageView
                    android:id="@+id/iv_turkey"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimenStartFlagHeight"
                    android:layout_weight="1"
                    android:padding="@dimen/dimenSelectBorder"
                    android:background="@drawable/back_flag"
                    android:scaleType="centerInside"
                    android:src="@drawable/flag_turkey"/>

                <ImageView
                    android:id="@+id/iv_korea"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimenStartFlagHeight"
                    android:layout_weight="1"
                    android:padding="@dimen/dimenSelectBorder"
                    android:background="@drawable/back_flag"
                    android:scaleType="centerInside"
                    android:src="@drawable/flag_korea"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_japan"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimenStartFlagHeight"
                    android:layout_weight="1"
                    android:padding="@dimen/dimenSelectBorder"
                    android:background="@drawable/back_flag"
                    android:scaleType="centerInside"
                    android:src="@drawable/flag_japan"/>

                <ImageView
                    android:id="@+id/iv_france"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimenStartFlagHeight"
                    android:layout_weight="1"
                    android:padding="@dimen/dimenSelectBorder"
                    android:background="@drawable/back_flag"
                    android:scaleType="centerInside"
                    android:src="@drawable/flag_france"/>

                <ImageView
                    android:id="@+id/iv_finland"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimenStartFlagHeight"
                    android:layout_weight="1"
                    android:padding="@dimen/dimenSelectBorder"
                    android:background="@drawable/back_flag"
                    android:scaleType="centerInside"
                    android:src="@drawable/flag_finland"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <WebView
        android:id="@+id/bring"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

</RelativeLayout>