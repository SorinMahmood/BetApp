<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context=".BetActivity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:background="@drawable/back_score"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorScoreText"
            android:textSize="18dp"
            tools:text="@string/totalScore"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorText"
        android:textSize="24dp"
        tools:text="@string/title_result_quarterfinal"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="11dp"
        android:paddingEnd="11dp"
        android:background="@drawable/back_list"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_pair_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pair_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorText"
                android:textSize="36dp"
                tools:text="Win"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pair_0_first"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/dimenFlagHeightB"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    tools:src="@drawable/flag_argentina"/>

                <TextView
                    android:id="@+id/tv_pair_0_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorText"
                    android:textSize="36dp"
                    tools:text="0"/>

                <TextView
                    android:id="@+id/tv_pair_0_div"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:textColor="@color/colorText"
                    android:textSize="36dp"
                    android:text="-"/>

                <TextView
                    android:id="@+id/tv_pair_0_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorText"
                    android:textSize="36dp"
                    tools:text="0"/>

                <ImageView
                    android:id="@+id/iv_pair_0_second"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/dimenFlagHeightB"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    tools:src="@drawable/flag_belgium"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_pair_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pair_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorText"
                android:textSize="36dp"
                tools:text="Win"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pair_1_first"
                    android:layout_width="100sp"
                    android:layout_height="@dimen/dimenFlagHeightB"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    tools:src="@drawable/flag_brazil"/>

                <TextView
                    android:id="@+id/tv_pair_1_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorText"
                    android:textSize="36dp"
                    tools:text="0"/>

                <TextView
                    android:id="@+id/tv_pair_1_div"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:textColor="@color/colorText"
                    android:textSize="36dp"
                    android:text="-"/>

                <TextView
                    android:id="@+id/tv_pair_1_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorText"
                    android:textSize="36dp"
                    tools:text="0"/>

                <ImageView
                    android:id="@+id/iv_pair_1_second"
                    android:layout_width="100sp"
                    android:layout_height="@dimen/dimenFlagHeightB"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    tools:src="@drawable/flag_greatbritain"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_pair_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pair_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorText"
                android:textSize="36dp"
                tools:text="Win"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pair_2_first"
                    android:layout_width="100sp"
                    android:layout_height="@dimen/dimenFlagHeightB"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    tools:src="@drawable/flag_turkey"/>

                <TextView
                    android:id="@+id/tv_pair_2_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorText"
                    android:textSize="36dp"
                    tools:text="0"/>

                <TextView
                    android:id="@+id/tv_pair_2_div"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:textColor="@color/colorText"
                    android:textSize="36dp"
                    android:text="-"/>

                <TextView
                    android:id="@+id/tv_pair_2_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorText"
                    android:textSize="36dp"
                    tools:text="0"/>

                <ImageView
                    android:id="@+id/iv_pair_2_second"
                    android:layout_width="100sp"
                    android:layout_height="@dimen/dimenFlagHeightB"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    tools:src="@drawable/flag_korea"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_pair_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pair_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorText"
                android:textSize="36dp"
                tools:text="Win"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pair_3_first"
                    android:layout_width="100sp"
                    android:layout_height="@dimen/dimenFlagHeightB"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    tools:src="@drawable/flag_japan"/>

                <TextView
                    android:id="@+id/tv_pair_3_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorText"
                    android:textSize="36dp"
                    tools:text="0"/>

                <TextView
                    android:id="@+id/tv_pair_3_div"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:textColor="@color/colorText"
                    android:textSize="36dp"
                    android:text="-"/>

                <TextView
                    android:id="@+id/tv_pair_3_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorText"
                    android:textSize="36dp"
                    tools:text="0"/>

                <ImageView
                    android:id="@+id/iv_pair_3_second"
                    android:layout_width="100sp"
                    android:layout_height="@dimen/dimenFlagHeightB"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    tools:src="@drawable/flag_france"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/iv_continue"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimenButtonHeight"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/button_continue"/>

</androidx.appcompat.widget.LinearLayoutCompat>
